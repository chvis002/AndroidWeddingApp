<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="christopherfrida.christopherfridasweddingapp.ContactUsActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skicka!"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title_ET"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/button"
        android:text="Titel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Titel: "
        android:id="@+id/titel_TV"
        android:layout_alignBottom="@+id/title_ET"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/title_ET"
        android:labelFor="@+id/title_ET"
        android:gravity="center_vertical"
        android:textSize="@dimen/abc_text_size_medium_material" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Meddelande: "
        android:id="@+id/meddelande_TV"
        android:labelFor="@+id/meddelande_ET"
        android:gravity="center_vertical"
        android:textSize="@dimen/abc_text_size_medium_material"
        android:layout_marginTop="68dp"
        android:layout_below="@+id/titel_TV"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/meddelande_ET"
        android:layout_alignTop="@+id/meddelande_TV"
        android:layout_alignStart="@+id/title_ET"
        android:text="Meddelande" />

</RelativeLayout>
